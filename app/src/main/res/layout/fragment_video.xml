<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.VideoFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/jiazai_layout" />
    <com.example.mvp.util.NetworkImageIndicatorView
        android:id="@+id/iamge_indicator"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </com.example.mvp.util.NetworkImageIndicatorView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quanbu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_text_shape"
            android:padding="5dp"
            android:text="全部"
            android:textColor="@color/bule" />

        <TextView
            android:id="@+id/yundingzhiyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="云顶之意" />

        <TextView
            android:id="@+id/nvsheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="女神" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>